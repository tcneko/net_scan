version: "3.7"
services:
  net_scan_backend:
    image: "net_scan_backend:1.0.0"
    user: "{{uid}}:{{gid}}"
    network_mode: "host"
    restart: "always"
    environment:
      - "TZ={{time_zone}}"
      - "PYTHONUNBUFFERED=1"
    command:
      - "--host"
      - "{{backend_listen_addr}}"
      - "--port"
      - "{{backend_listen_port}}"
